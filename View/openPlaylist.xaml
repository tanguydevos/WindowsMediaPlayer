<Window x:Class="WindowsMediaPlayer.View.openPlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open a playlist" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2E3030">
        <ComboBox Margin="0,29,0,0" Name="ComboPlaylist" HorizontalAlignment="Center"  
         VerticalAlignment="Top" Width="194" Height="30">
        </ComboBox>
        <Button Name="OpenPlaylist" Width="80" Height="25"  
         Content="Open" Margin="0,206,0,0" Click="OpenPlaylist_Click" HorizontalAlignment="Center"/>

    </Grid>
</Window>
